<div id = "<%= dom_id(category) %>" >
  <% if current_user.categories.include? category %>
    <%= link_to category.title.capitalize,
    user_category_path(current_user.user_categories.find_by(category: category)),
    data: { turbo_method: :delete} %>
  <% else %>

    <%= link_to category.title.capitalize,
    user_categories_path(category_id: category.id),
    data: { turbo_method: :post} %>
  <% end %>
</div>
