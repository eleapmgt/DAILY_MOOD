<h1 class="categories-edit-title">Mon suivi personnalisé</h1>

<%# itérer sur toutes les catégories
le toggle sera sur true ou false en fonction de si c'est une catégorie du user%>
<div class="categories-container" data-controller="user-categories">
  <div class="categories chosen-categories" data-user-categories-target="chosen">
    <h3>Votre sélection</h3>
      <%= render "categories", categories: @chosen_categories %>
  </div>

  <div class="categories other-categories" data-user-categories-target="other">
    <h3>Catégories disponibles</h3>
      <%= render "categories", categories: @other_categories %>
  </div>
</div>
