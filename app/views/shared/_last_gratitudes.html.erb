<div class="d-flex justify-content-center">
  <div class="schedular d-flex p-4 justify-content-between">
    <div class="">
      <% if current_user.diaries.present? %>
        <% current_user.diaries.order(date: :desc).each do |diary| %>
          <div class="">
            <p class="margin-bottom0px">
              <%= image_tag "bullet_point.svg", alt: "bullet", size: "30x30", class: "svg-green" %>
              <strong><%= diary.date %></strong></p>
            <p><%= diary.gratitude %></p>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="plus-button d-flex align-items-end">
      <%= link_to "#" do %>
        <%= image_tag "plus_button.svg", alt: "button", size: "60x60", class: "svg-green p-3" %>
      <% end %>
    </div>
  </div>
</div>
