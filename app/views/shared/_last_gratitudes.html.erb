<div class="d-flex justify-content-center height-31vh">
  <div class="schedular p-4 d-flex flex-column">
    <div class="gratitudes">
      <% if current_user.diaries.present? %>
        <% current_user.diaries.order(date: :desc).last(3).each do |diary| %>
          <div class="">
            <div class="date-gratitude">
              <div class="p-1">
                <div class="date-bullet">
                  <p><strong><%= diary.date.strftime('%d/%m/%Y') if diary.date.present?%></strong></p>
                  <%= image_tag "bullet_point.svg", alt: "bullet", size: "35x35", class: "svg-green bullet-path" %>
                </div>
                <p class="gratitude-list"><%= diary.gratitude&.truncate(35) %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="plus-button d-flex justify-content-end align-items-center">
      <%= link_to calendar_path(date: Date.today) do %>
        <%= image_tag "calendar.svg", alt: "button", size: "60x60", class: "svg-green p-3" %>
      <% end %>
    </div>
  </div>
</div>
