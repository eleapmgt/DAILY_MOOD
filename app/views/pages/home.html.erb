<div class="d-flex flex-column min-hv-90">
  <div class="header-homepage">
      <%# <div class="home-h1"> %>
        <%# <h1 class="h1-daily">Daily</h1>
        <h1 class="h1-mood">Mood</h1> %>
      <%# </div> %>
    <div class="logo-home">
      <%= image_tag('logo.png', alt: "logo Daily Mood", class: "logo-daily-mood") %>
    </div>
    <div class="p-3 text-center">
      <p>Apprends à valoriser tes pensées positives</p>
    </div>
  </div>

  <div class="my-5 d-flex justify-content-center">
    <% if user_signed_in? %>
      <% if current_diary.gratitude.blank? %>
        <%= link_to "DAILY", edit_diary_path(current_diary), class: "home-button" %>
      <% else %>
        <%= link_to "DAILY", "#", class: "home-button disable" %>
      <% end %>
    <% else %>
      <%= link_to "DAILY", new_user_session_path, class: "home-button" %>
    <% end %>
  </div>
</div>
<% unless current_diary&.gratitude&.blank? %>
  <p>Tu as déjà fait ton daily aujourd'hui, reviens demain.</p>
<% end %>
<% if user_signed_in? %>
  <%= render "/shared/last_gratitudes" %>
<% end %>
